<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.billbook">

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.activity.ItemListActivity"
            android:label="@string/title_activity_item_list"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".ui.activity.ShopDetailsActivity"
            android:label="@string/title_activity_shop_details"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.activity.ShopSalesActivity"
            android:label="@string/title_activity_shop_sales"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.activity.EmployeeSalesActivity"
            android:label="@string/title_activity_employee_sales"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.activity.StockListActivity"
            android:label="@string/title_activity_stock_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.activity.AddBranchActivity"
            android:label="@string/title_activity_add_branch"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.activity.OTPActivity"
            android:label="@string/title_activity_otp"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.activity.EmployeeRegisterActivity"
            android:label="@string/title_activity_employee_register"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.activity.ItemRegisterActivity"
            android:label="@string/title_activity_item_register"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.activity.ShopBranchActivity"
            android:label="@string/title_activity_shop_branch"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.activity.EmployeeListActivity"
            android:label="@string/title_activity_employee_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.activity.OrderDetailActivity"
            android:label="@string/title_activity_order_detail"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.activity.ShopRegistrationActivity"
            android:label="@string/title_activity_shop_registration"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.activity.OrderHistoryActivity"
            android:label="@string/title_activity_order_history" />
        <activity
            android:name=".ui.activity.OrderActivity"
            android:label="@string/title_activity_order"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.activity.LoginActivity"
            android:label="@string/title_activity_login"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.activity.SplashActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.activity.MainActivity" />
        <activity
            android:name=".ui.activity.ToolbarCaptureActivity"
            android:clearTaskOnLaunch="true"
            android:screenOrientation="portrait"
            android:stateNotNeeded="true"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateAlwaysHidden" />
    </application>

</manifest>