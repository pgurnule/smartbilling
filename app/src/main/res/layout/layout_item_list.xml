<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true"
    app:cardElevation="1dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/padding_10_dp"
        android:paddingBottom="@dimen/padding_10_dp"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/padding_10_dp"
                android:paddingRight="@dimen/padding_10_dp"
                android:fontFamily="@font/titillium_web_bold"
                android:textColor="@color/black"
                android:text="PD12345"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/titillium_web"
                android:layout_toLeftOf="@+id/txt_size"
                android:layout_marginRight="@dimen/margin_5dp"
                android:text="Size:"/>
            <TextView
                android:id="@+id/txt_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/titillium_web"
                android:text="M(38)"
                android:layout_marginRight="@dimen/padding_16dp"
                android:layout_alignParentRight="true"
                android:textColor="@color/black"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/padding_10_dp"
            android:paddingRight="@dimen/padding_10_dp"
            android:orientation="horizontal"
            android:weightSum="2">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/titillium_web"
                    android:text="Product"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_minus5dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/titillium_web_semibold"
                    android:text="Abc Jeans"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/titillium_web"
                    android:text="Type"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_minus5dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/titillium_web_semibold"
                    android:text="Jeans"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/padding_10_dp"
            android:paddingRight="@dimen/padding_10_dp"
            android:orientation="horizontal"
            android:weightSum="2">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/titillium_web"
                    android:text="Selling Price"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_minus5dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/titillium_web_semibold"
                    android:text="Rs. 1200"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/titillium_web"
                    android:text="Purchase Price"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_minus5dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/titillium_web_semibold"
                    android:text="Rs. 1000"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/margin_5dp"
            android:layout_marginBottom="@dimen/margin_5dp"
            android:background="?android:attr/dividerVertical"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/padding_10_dp"
            android:paddingRight="@dimen/padding_10_dp">
            <TextView
                android:id="@+id/txt_gen_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:fontFamily="@font/titillium_web"
                android:textColor="@color/bar_color_1"
                android:text="GENARETE BAR CODE"/>
            <TextView
                android:id="@+id/txt_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/txt_gen_code"
                android:layout_marginLeft="@dimen/padding_10_dp"
                android:fontFamily="@font/titillium_web"
                android:textColor="@color/colorAccent"
                android:text="EDIT"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/titillium_web"
                android:textColor="@color/red"
                android:layout_marginLeft="@dimen/padding_10_dp"
                android:layout_toRightOf="@+id/txt_edit"
                android:text="REMOVE"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:fontFamily="@font/titillium_web"
                android:textColor="@color/black"
                android:text="20 JAN 2020"/>
        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>