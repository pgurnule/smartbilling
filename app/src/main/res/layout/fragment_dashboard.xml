<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/padding_16dp">
    <TextView
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@drawable/round_shape_drawable"
        android:fontFamily="@font/titillium_web_bold"
        android:textColor="@color/whiteCardColor"
        android:layout_marginRight="@dimen/padding_10_dp"
        android:text="A"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/txt_title">
        <TextView
            android:id="@+id/txt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Anil Ingole"
            android:fontFamily="@font/titillium_web_bold"/>
            <TextView
                android:id="@+id/txt_view_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_name"
                android:layout_alignParentRight="true"
                android:textColor="@color/colorAccent"
                android:fontFamily="@font/titillium_web"
                android:drawablePadding="@dimen/padding_10_dp"
                android:drawableRight="@drawable/ic_right_arrow_small"
                android:text="View Details"/>
    </RelativeLayout>
</RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        android:layout_marginTop="@dimen/padding_16dp"
        android:layout_marginLeft="@dimen/margin_minus5dp"
        android:layout_marginRight="@dimen/margin_minus5dp"
        android:elevation="@dimen/margin_5dp">
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rc_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    </androidx.cardview.widget.CardView>
</LinearLayout>